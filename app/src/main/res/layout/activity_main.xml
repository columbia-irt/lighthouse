<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#000000"
    android:layout_height="match_parent"
    tools:context="io.sece.vlc.rcvr.MainActivity">

    <io.sece.vlc.rcvr.JavaCamera2View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/JCV"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        />
    <FrameLayout
        android:id="@+id/seekbarSizeFrame"
        android:layout_width="32dp"
        android:layout_height="180dp"
        android:layout_marginRight="10dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical">

        <SeekBar
            android:id="@+id/seekbarSize"
            android:progressBackgroundTint="#FFFFFF"
            android:progressTint="#FFFFFF"
            android:thumbTint="#FFFFFF"
            android:colorControlActivated="#FFFFFF"
            android:progress="40"
            android:max="80"
            android:layout_width="180dp"
            android:layout_height="32dp"
            android:layout_gravity="center"
            android:rotation="270" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/seekbarExposureFrame"
        android:layout_width="32dp"
        android:layout_height="180dp"
        android:layout_toLeftOf="@+id/seekbarSizeFrame"
        android:layout_marginRight="5dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical">

        <SeekBar
            android:id="@+id/seekbarExposure"
            android:progressBackgroundTint="#FF00FF"
            android:progressTint="#FF00FF"
            android:thumbTint="#FF00FF"
            android:colorControlActivated="#FF00FF"
            android:progress="40"
            android:max="80"
            android:layout_width="180dp"
            android:layout_height="32dp"
            android:layout_gravity="center"
            android:rotation="270" />
    </FrameLayout>

    <TextView
        android:textSize="33dp"
        android:textColor="#FFFFFF"
        android:layout_marginRight="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:text="-"
        android:id="@+id/textView2" />
    <TextView
        android:textSize="30dp"
        android:textColor="#FFFFFF"
        android:layout_marginRight="17dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:text="+" />

    <TextView
        android:id="@+id/tvExposure"
        android:textSize="15dp"
        android:textColor="#FFFFFF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/seekbarSizeFrame"
        android:layout_marginRight="5dp"
        android:text="Exp:\n0" />
    <TextView
        android:id="@+id/tvColorDetected"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="6dp"
        android:layout_marginTop="8dp"
        android:textColor="#FFFFFF"
        android:text="Color" />
    <TextView
        android:id="@+id/tvReceivedColor"
        android:text="Received\nColor"
        android:layout_width="60dp"
        android:background="#FFFFFF"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="6dp"
        android:layout_centerVertical="true"/>
    <TextView
        android:id="@+id/tvTransmitterSentColor"
        android:text="Sent\nColor"
        android:layout_width="60dp"
        android:background="#000000"
        android:layout_height="60dp"
        android:layout_toRightOf="@id/tvReceivedColor"
        android:layout_centerVertical="true"/>
    <Button
        android:id="@+id/btSetTransmitterColor"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="6dp"
        android:layout_marginBottom="6dp"
        android:text="Set" />

    <EditText
        android:id="@+id/etTransmitterColorValue"
        android:inputType="number"
        android:layout_width="120dp"
        android:text="180"
        android:textColor="#FFFFFF"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btSetTransmitterColor"
        android:layout_alignStart="@+id/btSetTransmitterColor" />


</RelativeLayout>
